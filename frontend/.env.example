# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME="Hotel Management System"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Comprehensive hotel management solution"

# Authentication Configuration
VITE_TOKEN_STORAGE_KEY=auth_token
VITE_USER_DATA_STORAGE_KEY=user_data
VITE_AUTO_LOGOUT_MINUTES=30

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_ITEMS_PER_PAGE=20
VITE_MAX_UPLOAD_SIZE=10485760

# Payment Configuration (for future billing system)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_ENABLE_PAYMENTS=false

# Development Configuration
VITE_DEBUG=false
VITE_MOCK_API=false
VITE_LOG_LEVEL=info

# Hotel-specific Configuration
VITE_DEFAULT_CHECKIN_TIME=15:00
VITE_DEFAULT_CHECKOUT_TIME=11:00
VITE_MAX_GUESTS_PER_ROOM=10
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm

# Map/Location Services (if needed)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Analytics (if enabled)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_HOTJAR_ID=your_hotjar_id

# Error Reporting
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ENABLE_ERROR_REPORTING=false