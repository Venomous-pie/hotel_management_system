# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Hotel Management System"
APP_VERSION=1.0.0

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./system.db
DB_LOGGING=false

# For production with PostgreSQL/MySQL:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hotel_management
# DB_USER=hotel_user
# DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-in-production
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Email Configuration (for notifications, password resets, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Gateway Configuration (for future billing system)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_STRIPE_PAYMENTS=false
ENABLE_PAYPAL_PAYMENTS=false

# Development Configuration
SEED_ON_START=true
FORCE_SYNC=false
DEBUG_QUERIES=false

# API Configuration
API_VERSION=v1
API_PREFIX=/api
REQUEST_TIMEOUT=30000

# Hotel-specific Configuration
DEFAULT_CHECKIN_TIME=15:00
DEFAULT_CHECKOUT_TIME=11:00
MAX_GUESTS_PER_ROOM=10
MAX_RESERVATION_DAYS=30
CANCELLATION_HOURS=24